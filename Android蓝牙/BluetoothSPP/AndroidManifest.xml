<?xml version="1.0" encoding="UTF-8"?>
<manifest android:versionCode="8" android:versionName="1.8" package="mobi.dzs.android.BluetoothSPP"
  xmlns:android="http://schemas.android.com/apk/res/android">
  	<uses-sdk android:minSdkVersion="6" android:targetSdkVersion="10"/>
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <application android:label="@string/app_name" 
        android:icon="@drawable/icon">
        <activity 
            android:label="@string/app_name_actMain" 
            android:name="actMain" 
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:label="@string/app_name_actDiscovery" 
            android:name="actDiscovery" 
            android:screenOrientation="portrait" />
        <activity 
            android:label="@string/app_name_actKeyBoard" 
            android:name="actKeyBoard" 
            android:screenOrientation="portrait" />
    </application>
</manifest>