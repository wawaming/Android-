    <LinearLayout android:orientation="horizontal" android:id="@+id/ly_keyboard_btn_Area_1" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true"
      xmlns:android="http://schemas.android.com/apk/res/android">
        <Button android:id="@+id/btn_keyboard_1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/btn_click_me" android:layout_weight="1.0" android:onClick="onBtnClick_Array" />
