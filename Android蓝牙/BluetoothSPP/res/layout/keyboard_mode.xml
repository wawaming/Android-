    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:id="@+id/ly_keyboard_btn_Area_2" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_above="@id/ly_keyboard_btn_Area_1"
      xmlns:android="http://schemas.android.com/apk/res/android">
